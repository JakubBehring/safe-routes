@using safe_routes.data
@model IEnumerable<Airport>
@{
    ViewData["Title"] = "Airports";
}

<h1>Airports</h1>
@if (Model.Count() > 0)
{
    <table class="table table-striped border">
        <thead>
            <tr class="table-secondary">
                <th><label asp-for="@Model.FirstOrDefault().airportName"></label></th>
                <th><label asp-for="@Model.FirstOrDefault().countryName"></label></th>
                <th><label asp-for="@Model.FirstOrDefault().latiude"></label></th>
                <th><label asp-for="@Model.FirstOrDefault().longitude"></label></th>
                <th><label asp-for="@Model.FirstOrDefault().gmt"></label></th>
                <th><label asp-for="@Model.FirstOrDefault().timezone"></label></th>
                <th><label asp-for="@Model.FirstOrDefault().cityIataCode"></label></th>
                <th><label asp-for="@Model.FirstOrDefault().countryIso2"></label></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var airport in Model)
            {
                <tr>
                    <td>@airport.airportName</td>
                    <td>@airport.countryName</td>
                    <td>@airport.latiude</td>
                    <td>@airport.longitude</td>
                    <td>@airport.gmt</td>
                    <td>@airport.timezone</td>
                    <td>@airport.cityIataCode</td>
                    <td>@airport.countryIso2</td>



                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No airports avaliable</p>
}

